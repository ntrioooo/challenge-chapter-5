<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="icon" href="/images/icon.svg">
  <script src="https://kit.fontawesome.com/cc4dc7c7cc.js" crossorigin="anonymous"></script>

  <title>Rent Car</title>
</head>

<body>
  <div class="main-container d-flex">
    <div class="sidebar1" id="side_nav">
      <div class="header-box px-2 pt-3 pb-4">
        <div class="d-flex justify-content-center images-logo">
          <img src="/images/logo.png" class="img-fluid" alt="Logo">
        </div>
        <button class="btn d-md-none d-block close-btn px-1 py-0 text-white mt-3 mb-3">
          <i class="d-flex justify-content-center fa-solid fa-backward icon-back"></i>
        </button>
      </div>
      <div class="d-flex justify-content-center sidebar-menu">
        <ul>
          <li class="mb-2">
            <a href="#" class="text-decoration-none d-block"><i
                class="d-flex justify-content-center fa-solid fa-house"></i>
              <p class="d-flex justify-content-center mt-1">Dashboard</p>
            </a>
          </li>
          <li class="">
            <a href="/" class="text-decoration-none d-block"><i
                class="d-flex justify-content-center fa-solid fa-car"></i>
              <p class="d-flex justify-content-center mt-1">Cars</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="sidebar2" id="side_nav">
      <div class="header-box px-2 pt-3 pb-4">
        <div class="d-flex justify-content-center images-logo">
          <img src="/images/logo2.png" class="img-fluid" alt="Logo">
        </div>
      </div>
      <div class="d-flex justify-content-center sidebar-menu mt-4">
        <ul>
          <li class="d-flex justify-content-center mb-2 text-sidebar1">
            <a href="#" class="text-decoration-none d-block">
              <p class="mt-1">CARS</p>
            </a>
          </li>
          <li class="d-flex justify-content-center text-sidebar2 px-4">
            <a href="#" class="text-decoration-none d-block">
              <p class="mt-1">List Cars</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container-fluid">
          <div class="d-flex justify-content-between d-md-none d-block">
            <a class="navbar-brand fs-4" href="#">Navbar</a>
            <button class="btn px-1 py-0 open-btn"><i class="fa-solid fa-bars"></i></button>
          </div>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#"><i
                    class="d-none d-sm-block fa-solid fa-bars"></i></a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-search" type="submit">Search</button>
            </form>
            <div class="user d-flex flex-row">
              <div class="image ms-2">
                <img src="/images/user.png" alt="User">
              </div>
              <span class="d-flex align-items-center ms-2">Unis Badri A</span>
              <i class="fa-solid fa-chevron-down d-flex align-items-center ms-2"></i>
            </div>
          </div>
        </div>
      </nav>
      <div class="content-page">
        <!-- content -->
        <div class="content">
          <!-- Start Content-->
          <div class="container-fluid">
            <div class="container">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#"><i></i>Cars</a></li>
                  <li class="breadcrumb-item" aria-current="page"><a href="#">List Cars</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Update Car Information</li>
                </ol>
              </nav>
              <h3>Update Car Information</h3>
            </div>

            <div class="container">
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card border-0">
                    <form action="/cars/<%= id %>/update" method="POST" enctype="multipart/form-data">
                      <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Nama Mobil</label>
                        <div class="col-sm-5">
                          <input type="text" name="nama" value="<%= nama %>" class="form-control" id="colFormLabel"
                            placeholder="Avanza">
                        </div>
                        <div class="invalid-feedback">
                          tidak boleh kosong
                        </div>
                      </div>
                      <br>
                      <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Sewa Per Hari</label>
                        <div class="col-sm-5">
                          <input type="number" name="harga" value="<%= harga %>" class="form-control" id="colFormLabel"
                            placeholder="Rp.0,-">
                        </div>
                      </div>
                      <br>
                      <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Ukuran</label>
                        <div class="col-sm-5">

                          <select class="form-select" name="size" id="ukuran" aria-label="Floating label select example"
                            required="">

                            <option value=1 <% if(size_id == 1){ %> selected="selected" <% } %>>Small</option>
                            <option value=2 <% if(size_id == 2){ %> selected="selected" <% } %>>Medium</option>
                            <option value=3 <% if(size_id == 3){ %> selected="selected" <% } %>>Large</option>
                          </select>
                        </div>
                      </div>
                      <br>
                      <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">Foto</label>
                        <div class="col-sm-5">
                          <input class="form-control" name="gambar" type="file" id="foto" placeholder="small">
                          <small id="text" class="text-muted">
                            File size max.2MB
                          </small>
                        </div>
                      </div>

                      <div class="modal-footer">
                        <a href="/" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i> Cancel</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- end row -->
          </div> <!-- container-fluid -->
        </div>
        <!-- End content -->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script>
          $('.sidebar1 ul li').on('click', function () {
            $('.sidebar1 ul li.active').removeClass('active');
            $(this).addClass('active');

          });

          $('.open-btn').on('click', function () {
            $('.sidebar1').addClass('active');
          })

          $('.close-btn').on('click', function () {
            $('.sidebar1').removeClass('active');
          })
        </script>

</body>

</html>